<launch>
    
    <!-- arg name="camera_serial" default="18304114" get from 
    rosrun pointgrey_camera_driver list_cameras.py -->
    list /> -->
    <arg name="camera_serial" default="18304114" />
    <arg name="calibrated" default="0" />

    <!-- ========================================================== -->
    <!-- Launch the camera.                                         -->
    <!-- ========================================================== -->

    <!-- <param name="camera/image_raw/compressed/format"       type="string" value="jpeg" /> -->
    <!-- <param name="camera/image_raw/compressed/jpeg_quality" type="int"    value="50" /> -->

    <group ns="camera">
      <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />
      <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet camera_nodelet_manager" >

    <param name="frame_id"              value="camera"                  />
    <param name="serial"                value="$(arg camera_serial)"    />
	<param name="video_mode" 		    value="format7_mode0" 	        />
	<param name="frame_rate" 		    value="100" 		                />
	<param name="auto_exposure"         value="false"                   />
	<param name="exposure" 		        value="2.5" 		            />
    <param name="auto_gain"             value="false"                   />
	<param name="gain" 			        value="22" 		                />
	<param name="brightness" 		    value="7" 		                />
	<param name="gamma" 		        value="1.05" 		                />
    <param name="auto_shutter"          value="false"                   />
    <param name="shutter_speed"         value="1"                       />
	<param name="format7_roi_height" 	value="350" 		            /> <!-- widthMAX=648 , heightMax=488-->
	<param name="format7_roi_width"  	value="548" 		            />
    <param name="format7_x_offset"      value="74" 		                />
	<param name="format7_y_offset"  	value="94" 		                />
    <param name="enable_trigger" 		value="false" 		            />
    <param name="trigger_mode" 		    value="Mode14" 		            />

      <!-- Use the camera_calibration package to create this file -->
    <!--param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" / -->
    </node>

    <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer camera_nodelet_manager">
    </node>
  </group>

</launch>